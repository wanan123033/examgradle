<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:windowSoftInputMode="stateHidden">

    <LinearLayout
        android:id="@+id/view_choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <EditText
            android:id="@+id/et_input_text"
            android:layout_width="231dp"
            android:layout_height="35dp"
            android:layout_marginLeft="14dp"
            android:background="@drawable/edit_search_bg"
            android:gravity="left|center_vertical"
            android:imeOptions="actionGo"
            android:maxLines="1"
            android:hint="请输入考号"
            android:paddingLeft="10dp"
            android:singleLine="true" />

        <Button
            android:id="@+id/btn_query"
            android:layout_width="91dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn_click_bg_selected"
            android:text="检索"
            android:textColor="@color/white"
            android:textSize="20sp" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <Spinner
            android:id="@+id/sp_schedule"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/icon_spinner_bg"/>
        <Spinner
            android:id="@+id/sp_examplaceName"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/icon_spinner_bg"/>
        <Spinner
            android:id="@+id/sp_item"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/icon_spinner_bg"/>
        <Spinner
            android:id="@+id/sp_subitem"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/icon_spinner_bg"/>
        <Spinner
            android:id="@+id/sp_group"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            android:background="@drawable/icon_spinner_bg"/>
    </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/view_seach"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_choose"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">


            <ImageButton
                android:id="@+id/imgbtn_scan"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="5dp"
                android:adjustViewBounds="true"
                android:background="@mipmap/scan"
                android:scaleType="centerCrop" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_bottom"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:paddingRight="10dp"
        android:gravity="right|center_vertical"
        android:orientation="horizontal">

        <TextView
            style="@style/style_setting_tv_title"
            android:layout_marginLeft="20dp"
            android:text="总数："
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_stu_sumNumber"
            android:layout_width="72dp"
            android:layout_height="22dp"
            android:background="@drawable/edit_search_bg"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="#909399" />

        <Button
            android:id="@+id/btn_upload"
            android:layout_width="121dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:layout_marginRight="37dp"
            android:background="@color/colorAccent"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="上传成绩"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_data_head"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/view_seach"
        android:background="#E6E6E6"
        android:orientation="horizontal"
        android:padding="1dp">


        <TextView
            style="@style/style_txt_white_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:background="#AAD3FF"
            android:gravity="center"
            android:text="考号" />

        <TextView
            style="@style/style_txt_white_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1.5"
            android:background="#AAD3FF"
            android:gravity="center"
            android:text="项目名称" />

        <TextView
            style="@style/style_txt_white_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="2"
            android:background="#AAD3FF"
            android:gravity="center"
            android:text="场地" />



        <TextView
            style="@style/style_txt_white_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="#AAD3FF"
            android:gravity="center"
            android:text="成绩" />
        <TextView
            style="@style/style_txt_white_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="#AAD3FF"
            android:gravity="center"
            android:text="得分" />
        <TextView
            style="@style/style_txt_white_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:layout_weight="1"
            android:background="#AAD3FF"
            android:gravity="center"
            android:visibility="gone"
            android:text="体重" />
        <TextView
            android:id="@+id/tv_allSelected"
            style="@style/style_txt_white_title"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="1dp"
            android:background="#AAD3FF"
            android:gravity="center"
            android:text="全选" />
    </LinearLayout>

    <com.feipulai.common.view.PullToRefreshView
        android:id="@+id/refreshview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view_bottom"
        android:layout_below="@+id/view_data_head">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_results"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/background_color" />
        <!--android:fadeScrollbars="false"-->

    </com.feipulai.common.view.PullToRefreshView>

</RelativeLayout>