<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#FF258EFF</item>
        <item name="colorPrimaryDark">#FF258EFF</item>
        <item name="colorAccent">#FF258EFF</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:textColorSecondary">#000000</item>
    </style>

    <style name="style_setting_tv_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">#101010</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="style_txt_white_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>
